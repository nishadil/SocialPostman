{
    "name": "nishadil/socialpostman",
    "description": "SocialPostman is a PHP library to publish posts to social media platforms. (Facebook, Instagram, LinkedIn, Twitter/X) with background processing and retry support.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Nishadil.Dev",
            "email": "opensource@nishadil.dev"
        }
    ],
    "require": {
        "php": ">=8.1"
    },
    "autoload": {
        "psr-4": {
            "Nishadil\\SocialPostman\\": "src/"
        }
    },
    "minimum-stability": "stable",
    "extra": {
        "laravel": {
            "providers": [
                "Nishadil\\SocialPostman\\Laravel\\SocialPostmanServiceProvider"
            ],
            "aliases": {
                "SocialPostman": "Nishadil\\SocialPostman\\Laravel\\Facades\\SocialPostman"
            }
        }
    }
}
